@model Publicaciones.Web.ViewModels.Models.PubViewModels.PubDeleteViewModel

@{
    ViewData["Title"] = "Delete";
    // Layout = "~/Views/_ViewImports.cshtml";
}

<div class="card bg-light col-6 offset-3" style="width:600px; font-family:'Times New Roman', Times, serif">
    <div class="card-header">
        <h3>Are you sure you want to delete this Publisher?</h3>
        <hr />
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Publisher ID:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PubID)</dd>

            <dt class="col-sm-3">Deleted User:</dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.ChangeUser)</dd>

            <dt class="col-sm-3">Deleted Date:</dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.ChangeDate) </dd>
        </dl>
        <div class="card-footer">
            <form asp-cotroller="publisher" asp-action="Delete">
                <input asp-route-PubID="@Model.PubID" asp-route-Deleted="@Model.Deleted" asp-route-ChangeUser="@Model.ChangeUser"
                       asp-route-ChangeDate="@Model.ChangeDate" type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>